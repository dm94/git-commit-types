{
  "name": "git-commit-types",
  "displayName": "Git Commit Types",
  "version": "0.1.0",
  "author": "Dm94Dani",
  "publisher": "deeme",
  "description": "An extension to help with git commit messages",
  "bugs": {
    "url": "https://github.com/dm94/git-commit-types/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dm94/git-commit-types"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-commit-types.showCommitOptions",
        "title": "Git commit types: Show Commit Options",
        "icon": "$(list-unordered)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "git-commit-types.showCommitOptions",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "~24.10.1",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.3"
  }
}
